extends layout
include _posts

block content

  unless notFound
    h1.title #{user.name}
    if profile.status
      h2.subtitle Status: #{profile.status}
    .section.columns
      .column.profileInfo.is-one-quarter
        if profile.picture
          img(src=profile.picture, alt="Profile Picture")
      .column.posts
        for post in profile.posts
          +post(post)
        else
          p No posts to display. :(
        .container.is-wi  
          h2.title.is-5 New Post
          form(action="/posts/new", method="POST")
            input(type="hidden", name="profileId" value=profile._id)
            .field
              .control
                textarea.textarea#post(name="post", rows="2")
            .field.is-grouped
              .control
                button.button.is-link(type="submit") Submit
              .control
                button.button.is-light(type="reset") Reset

  else
    h1.title.has-text-danger Profile not found. :(
