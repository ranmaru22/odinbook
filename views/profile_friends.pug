extends profile_layout

block profileContent
  .level
    if user.recvFriendRequests.length > 0
      .container
        h2.title.is-4 Friend Requests
          for friendRequest in user.recvFriendRequests
            +friend(friendRequest, true)

    .container.mt-6
      h2.title.is-4 Friends
        for friend, index in user.friends
          +friend(friend)
          +friend(friend)
          +friend(friend)
          +friend(friend)
          br
          +friend(friend)
          +friend(friend)
          +friend(friend)
          +friend(friend)
        else
          p No friends yet. :(
